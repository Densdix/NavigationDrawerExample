<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="8dp"
    android:paddingRight="8dp"
    android:paddingTop="24dp">

    <ImageView
        android:id="@+id/photo_list_item__image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/photo_list_item__image_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:gravity="center_horizontal|start"
        android:paddingStart="3dp"
        android:text="List Item Title"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo_list_item__image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_list_item__image_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:gravity="center_horizontal|start"
        android:paddingStart="3dp"
        android:text="Secondary text"
        android:textSize="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo_list_item__image"
        app:layout_constraintTop_toBottomOf="@+id/photo_list_item__image_title" />

</androidx.constraintlayout.widget.ConstraintLayout>